# [mergetool "my-merge"]
#    cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE
# [merge]
#   tool = my-merge
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[alias]
    a = add --all
    ai = add -i
    aa = add -u :/
    #############
    ap = apply
    as = apply --stat
    ac = apply --check
    #############
    ama = am --abort
    amr = am --resolved
    ams = am --skip
    #############
    b = branch
    ba = branch -a
    bd = branch -d
    br = branch -r
    #############
    cmt = commit
    ca = commit -a
    cm = commit -m
    cem = commit --allow-empty -m
    cam = commit -am
    cd = commit --amend
    cad = commit -a --amend
    ced = commit --allow-empty --amend
    co = checkout
    co220 = checkout sw/dev/va220
    #############
    d = diff
    diffname = diff --name-only
    dm = difftool --no-prompt -t meld
    dc = diff --cached
    dl = difftool
    dlc = difftool --cached
    dk = diff --check
    dp = diff --patience
    dck = diff --cached --check
    #############
    f = fetch
    fo = fetch origin
    fu = fetch upstream
    #############
    fp = format-patch
    #############
    fk = fsck
    #############
    g = grep -p
    #############
    l = log --oneline
    ls = log --pretty=format:\"%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) %C(white) %an, %ar%Creset\" --decorate --date=short
    ls2 = log --graph --pretty=format\":%C(yellow)%h%C(red)%d%C(reset) %s %C(white) %an, %ar%Creset\"
    ls3 = log --graph --pretty=format\":%C(yellow)%h%C(red)%d%C(reset) %s %C(white) %an, %ar%Creset\" --all
    lg = log --oneline --graph --decorate
    #############
    # ls = ls-files
    lsf = "!git ls-files | grep -i"
    #############
    m = merge
    ma = merge --abort
    mc = merge --continue
    ms = merge --skip
    #############
    o = checkout
    ob = checkout -b
    #############
    pr = prune -v
    #############
    ps = push
    psf = push -f
    psu = push -u
    pso = push origin
    psao = push --all origin
    psfo = push -f origin
    psuo = push -u origin
    psom = push origin master
    psfom = push -f origin master
    psuom = push -u origin master
    #############
    pl = pull
    plu = pull -u
    plo = pull origin
    plp = pull upstream
    plom = pull origin master
    plpm = pull upstream master
    #############
    pb = pull --rebase
    pbo = pull --rebase origin
    pbp = pull --rebase upstream
    pbom = pull --rebase origin master
    pbpm = pull --rebase upstream master
    #############
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase --interactive
    rbs = rebase --skip
    #############
    re = reset
    rh = reset HEAD
    reh = reset --hard
    rem = reset --mixed
    res = reset --soft
    rehh = reset --hard HEAD
    remh = reset --mixed HEAD
    resh = reset --soft HEAD
    #############
    r = remote
    ra = remote add
    rr = remote rm
    rv = remote -v
    rm = remote rename
    rp = remote prune
    rs = remote show
    rao = remote add origin
    rau = remote add upstream
    rso = remote show origin
    rsu = remote show upstream
    rpo = remote prune origin
    rpu = remote prune upstream
    #############
    s = status -uno
    checkaut = "!git status -uno -s |  awk '{print $2}' | xargs git co"
    # ss = status -s -b
    ss = status -uno -b -s
    sh = status -s -uno
    # ss = status -s -uno
    #############
    # sa = stash apply
    sc = stash clear
    sd = stash drop
    sl = stash list
    sp = stash pop
    sw = stash show
    st = stash
    dejanslog = log
    #############
    pop = stash pop
    sw220 = checkout sw/dev/va220


    #############
    w = show
    wp = show -p
    wr = show -p --no-color
    #############
[core]
    pager = less -R
[color]
    ui = true
